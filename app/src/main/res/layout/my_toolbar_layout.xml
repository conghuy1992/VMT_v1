<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!--import class BindingUtils-->
        <!--<import type="info.androidhive.databinding.utils.BindingUtils" />-->

        <!--<import type="android.view.View"/>-->

        <!--<variable-->
        <!--name="viewModel"-->
        <!--type="com.alpine.my19app.app.MainViewModel" />-->
    </data>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥: "
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvCurrency"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_title_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:visibility="invisible"
            android:text="Title"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/menuCart"
            style="@style/toolbar_menu">

            <ImageView
                style="@style/menu_icon"
                android:src="@drawable/ic_cart" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/menuNotification"
            style="@style/toolbar_menu">

            <ImageView
                style="@style/menu_icon"
                android:src="@drawable/ic_notification" />

            <ImageView
                style="@style/iv_common"
                android:id="@+id/ivNewNoti"
                android:layout_width="12dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_point_red" />
        </FrameLayout>


    </LinearLayout>
</layout>
